<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <title>SocialMediaApp</title>
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-light shadow-sm">
        <div class="container">
            <a href="/" class="navbar-brand">
                <i class="bi bi-bullseye"></i> SocialMediaApp
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto d-flex align-items-center">
                    @if(User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item ms-3">
                            <a class="nav-link" href="#">
                                <img src="~/img/pp.png" alt="Profile" class="rounded-circle" width="30" height="30">
                            </a>
                        </li>
                        <li class="nav-item ms-3">
                            <a asp-controller="Users" asp-action="Logout" class="nav-link">
                                <i class="bi bi-box-arrow-right" style="font-size: 20px;"></i>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-3">
                            <a asp-controller="Users" asp-action="Login" class="nav-link">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false);
</body>

</html>
