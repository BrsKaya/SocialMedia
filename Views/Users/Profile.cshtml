@model User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile Page</title>
    <link rel="stylesheet" href="style3.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        body {
            margin-top: 20px;
            background: linear-gradient(to right, #e2e2e2, #c9d6ff);
        }
        .container {
            max-width: 600px;
            margin: auto;
        }
        .profile-header {
            display: flex;
            justify-content: flex-start;
            align-items: center;
            margin-bottom: 20px;
            position: relative;
        }
        .profile-header img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            border: 6px solid #5c6bc0;
            margin-right: 15px; /* Profil fotoğrafı ile kullanıcı adı arasına boşluk ekleyelim */
        }
        .profile-header .profile-name {
            margin: 0;
        }
        .profile-header .profile-name h3 {
            font-size: 24px;
            color: #333;
            display: inline;
        }
        .profile-header .home-icon {
            margin-left: 10px;
            font-size: 20px;
            cursor: pointer;
            color: #333;
        }
        /* Profile Info Styling */
        .profile-info {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }
        .profile-info label {
            font-weight: bold;
        }
        .profile-info input,
        .profile-info textarea {
            border: none;
            background: transparent;
            pointer-events: none;
            color: #333;
        }
        .editable input,
        .editable textarea {
            border: 1px solid #ced4da;
            background: #ffffff;
            pointer-events: auto;
        }
        .editable #profileImageInput {
            display: inline;
        }
        .profile-image-upload {
            display: none;
        }
        .editable .profile-image-upload {
            display: inline-block;
        }
        /* Posts Section Styling */
        .posts-section {
            background-color: #ffffff;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container light-style flex-grow-1 container-p-y">
        <div class="profile-header">
            <img src="~/img/pp.png" alt id="profileImage">
            <input type="file" id="profileImageInput" class="profile-image-upload" onchange="updateProfileImage()">
            <div class="profile-name">
                <h3 id="username">@Model.UserName</h3>
            </div>
            <a href="/" class="home-icon"><i class="fas fa-home"></i></a> <!-- Home ikonu -->
        </div>
        <div class="profile-info" id="profileDetails">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" value="@Model.UserName">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" value="@Model.Email">
            </div>
        </div>
        <div class="posts-section">
            <h4>Posts</h4>
            @foreach(var post in @Model.Posts)
            {
                <li class="list-group-item">
                    <i class="bi bi-caret-right-fill"></i>
                    <a href="/posts/@post.Url">@post.Content</a>
                </li>
            }
        </div>
    </div>
</body>
</html>
